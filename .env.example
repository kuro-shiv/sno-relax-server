# ============================
# SnoRelax Server Configuration
# ============================
# Copy this file to .env and fill in the values below.
# DO NOT commit .env to git (it contains secrets).

# ============================
# Node Environment
# ============================
NODE_ENV=development

# ============================
# Server Port
# ============================
PORT=5000

# ============================
# MongoDB Configuration
# REQUIRED for hosted environments to work with groups/chats
# ============================
# For MongoDB Atlas (Cloud - recommended for hosting):
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster0.xxxxx.mongodb.net/snoRelax?retryWrites=true&w=majority

# For local MongoDB (development only):
# MONGODB_URI=mongodb://localhost:27017/snoRelax

# ============================
# CORS Configuration
# ============================
CORS_ORIGIN_DEVELOPMENT=http://127.0.0.1:3000,http://localhost:3000,http://localhost:3001,http://127.0.0.1:3001
CORS_ORIGIN_PRODUCTION=https://sno-relax-client.vercel.app,https://sno-relax-admin.vercel.app

# ============================
# JWT Configuration
# ============================
JWT_SECRET=change_this_to_a_strong_random_string_in_production
JWT_EXPIRY=7d

# ============================
# External API Keys
# ============================
# Cohere AI API (for chatbot)
COHERE_API_KEY=your_cohere_api_key_here

# HuggingFace API
HF_API_KEY=your_huggingface_api_key_here

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ============================
# Socket.IO Configuration
# ============================
SOCKET_IO_ENABLED=true
SOCKET_IO_CORS_ORIGIN=http://127.0.0.1:3000,http://localhost:3000,http://localhost:3001

# ============================
# Logging
# ============================
LOG_LEVEL=debug
